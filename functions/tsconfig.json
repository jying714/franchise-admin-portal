{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
